{
	"default_locale": "en",
	"name": "__MSG_RiddR__",
	"description": "__MSG_desc__",
	"version": "0.1",
	"manifest_version": 2,
	"minimum_chrome_version": "47",
	"icons": 
	{ 
		"16": "images/small_icon.png",
		"128": "images/icon.png"
	},
	
	"background": 
	{
		"scripts": ["/js/core.js"],
		"persistent": true
	},
	
	"permissions": 
	[
		"tts", 
		"ttsEngine",
		"activeTab",
		"contextMenus",
		"storage",
		"unlimitedStorage"
	],

	"optional_permissions":
	[
		"identity"
	],

	"content_scripts": 
	[
		{
			"all_frames"	: true,
			"matches"		: ["<all_urls>"],
			"run_at" 		: "document_start",
			"css"			: ["css/content.css"],
			"js"			: ["js/content.js", "js/modules/io.js"]
		}
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"options_ui": 
	{
		"chrome_style": true,
		"page": "views/options.html"
	},

	"browser_action": 
	{
		"default_icon": 
		{
			"16": "images/small_icon.png",
			"24": "images/small_icon.png",
			"32": "images/small_icon.png"
		},
		"default_title": "Read the selected text.",
		"default_popup": "views/popup.html"
	},

	"commands": 
	{
		"pause": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+P"
			},
			"description": "Pause reading"
		},
		"stop": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+S"
			},
			"description": "Stop reading"
		},
		"_execute_browser_action": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+R"
			}
		}
	},
	
	"tts_engine":
	{
		"voices":
		[
			{
				"voice_name": "SpeakIt",
				"remote"	: true,
				"event_types": ["start", "marker", "sentence", "end", "error"]
			}
		]
	}
}