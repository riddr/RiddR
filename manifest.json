{
	"default_locale": "en",
	"name": "__MSG_RiddR__",
	"description": "__MSG_desc__",
	"version": "0.5.3",
	"manifest_version": 3,
	"minimum_chrome_version": "88",
	"icons": 
	{ 
		"16": "images/small_icon.png",
		"128": "images/icon.png"
	},
	
	"background": 
	{
		"service_worker": "/js/core.js",
		"type": "module"
	},
	
	"permissions": 
	[
		"tts", 
		"ttsEngine",
		"activeTab",
		"scripting",
		"contextMenus",
		"storage",
		"offscreen"
	],

	"optional_permissions":
	[
		"identity"
	],

	"optional_host_permissions" : [ "*://*/*" ],

	"options_ui": 
	{
		"page": "views/options.html"
	},

	"action": 
	{
		"default_icon": 
		{
			"16": "images/small_icon.png",
			"24": "images/small_icon.png",
			"32": "images/small_icon.png"
		},
		"default_title": "Read the selected text.",
		"default_popup": "views/popup.html"
	},

	"commands": 
	{
		"pause": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+P"
			},
			"description": "Pause reading"
		},
		"stop": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+S"
			},
			"description": "Stop reading"
		},
		"_execute_action": 
		{
			"suggested_key": 
			{
				"default"	: "Alt+R"
			}
		}
	},
	
	"tts_engine":
	{
		"voices":
		[
			{
				"voice_name": "SpeakIt",
				"remote"	: true,
				"event_types": ["start", "marker", "sentence", "end", "error"]
			}
		]
	}
}